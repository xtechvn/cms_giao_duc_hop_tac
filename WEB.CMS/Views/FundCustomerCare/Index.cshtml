@{
    ViewData["Title"] = "Quỹ chăm sóc khách hàng";
}
@using Entities.Models
@{

}

<section style=" overflow-x: hidden;">
    <div class="main-container">
        <div class="row-main container">
            <h2 class="txt_18 bold mb20">Quỹ chăm sóc khách hàng</h2>
            <div class="wrap_bg wrap_bg_no-padding mb20" style="width: 70% !important;" bis_skin_checked="1">
                <div class="table-responsive table-default table-gray" bis_skin_checked="1">
                    <table class="table table-nowrap">
                        <thead>
                            <tr>
                                <th>Tổng Quỹ</th>

                                <th>Đang yêu cầu chi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@if(ViewBag.TotalFundCustomerCare > 0)
                                {
                                    @ViewBag.TotalFundCustomerCare.ToString("N0")
                                    <a class="blue" href="javascripts:;" onclick="_fund_customer_care.PopupClient()" >Xem chi tiết</a>
                                }
                                else
                                {
                                    @ViewBag.TotalFundCustomerCare.ToString("N0")
                                }
                                </td>

                                <td>
                                    @ViewBag.TotalAmountPaymentRequestPending
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <h2 class="txt_18 bold mb20">Danh sách phiếu yêu cầu chi</h2>

            <div class="line-bottom mb20">
                <div class="flex row-main-head">

                    <div class="btn-right text-right ">
                        <button type="button" class="btn btn-default bg-main mb10 mr-2" onclick="_fund_customer_care.Add()">
                            <i class="fa fa-plus-circle"></i>Thêm phiếu yêu cầu chi
                        </button>

                    </div>
                </div>
            </div>
            <div class="tab-default" style="border-bottom: 1px solid #CCCCCC;">
                <a href="javascript:;" onclick="_fund_customer_care.OnSearchStatus(-1)" id="countSttAll" class="active">Tất cả (0)</a>
                <a href="javascript:;" onclick="_fund_customer_care.OnSearchStatus(0)" id="countSttDraft">Lưu nháp (0)</a>
                <a href="javascript:;" onclick="_fund_customer_care.OnSearchStatus(2)" id="countSttWaitDepartmentLeadApprove">Chờ TBP duyệt (0)</a>
                <a href="javascript:;" onclick="_fund_customer_care.OnSearchStatus(3)" id="countSttWaitDirectorApprove">Chờ KTT duyệt (0)</a>
                <a href="javascript:;" onclick="_fund_customer_care.OnSearchStatus(1)" id="countSttReject">Từ chối (0)</a>
                <a href="javascript:;" onclick="_fund_customer_care.OnSearchStatus(4)" id="countSttApprove">Chờ chi (0)</a>
                <a href="javascript:;" onclick="_fund_customer_care.OnSearchStatus(5)" id="countSttPayment">Đã chi (0)</a>
            </div>
            <div id="grid_data" class="wrap_bg wrap_bg_no-padding mb20">
                <div class="col-xl-12 text-center" style="margin-top:200px">
                    <img src="~/images/icons/loading.gif" style=" width: 100px; height: 100px; display:none;"
                         id="imgLoading" />
                </div>
            </div>

        </div>
    </div>
</section>

@section scripts {
    <script type="text/javascript" src="~/modules/fund_customer_care.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/modules/"></script>
    <script type="text/javascript" src="~/js/zebra_datepicker.min.js"></script>
