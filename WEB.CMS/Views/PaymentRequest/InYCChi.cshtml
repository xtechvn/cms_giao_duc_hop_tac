@using Entities.ViewModels;
@using Utilities;
@using Entities.Models;
@{
    var model = (PaymentRequestViewModel)ViewBag.model;
}
<!doctype html>
<html>

<head>
    <meta name="viewport" content="width=device-width">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Simple Email</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
        }




        table td {
            padding: 6px;
            vertical-align: middle;
        }

        input[type="text"], input[type="password"], input[type="email"], input[type="tel"], textarea, select.form-control {
            background: #fff;
            width: 100%;
            font-size: 13px;
            height: 35px;
            line-height: 35px;
            border: 1px solid #ccc;
            padding: 0 5px;
            outline: 0;
            box-shadow: none;
            color: #000;
        }
    </style>
</head>

<body style="background-color: #f6f6f6; font-family:Arial; -webkit-font-smoothing: antialiased; font-size: 14px;color: #00264D; line-height: 1.4;max-width: 750px; margin: 0 auto; padding: 0; -ms-text-size-adjust: 100%; -webkit-text-size-adjust: 100%;">
    <span class="preheader" style="color: transparent; display: none; height: 0; max-height: 0; max-width: 0; opacity: 0; overflow: hidden; visibility: hidden; width: 0;">

    </span>
    <table role="presentation" border="0" cellpadding="0" cellspacing="0" style="border-collapse: separate; width: 100%;">
        <tr>
            <td class="container" style="padding: 0;background: #fff  no-repeat right 0 top 0;">
                <div class="content" style="margin: 0 auto; max-width: 750px;box-sizing: border-box; display: block; padding: 15px 20px;">
                    <table role="presentation" border="0" cellpadding="0" cellspacing="0" style="border-collapse: separate; width: 100%;" width="100%">
                        <tbody>
                            <tr style="font-weight: 600;" data-mce-style="font-weight: 600;">
                                <td style="border: 1px solid #999; padding: 5px;">
                                    <div>CÔNG TY CP TM&DV QUỐC TẾ ĐẠI VIỆT</div>
                                    <img width="120" src="https://static-image.adavigo.com/uploads/images/email/logo.png">
                                    <div>Địa chỉ: Tầng 6, tòa nhà Sannam, 78 Duy Tân, Cầu Giấy, Hà Nội</div>
                                </td>
                                <td colspan="3" style="border: 1px solid #999; padding: 5px;font-weight: 400;text-align: center;">
                                    <div style="font-size: 15px;margin-bottom: 15px;font-weight: bold;"></div>

                                    <div>Mẫu số: 05-TT</div>
                                    <div>(Ban hành theo TT số: 133/2016/TT-BTC ngày 26/08/2016 của BTC) </div>

                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table style="border: 0; border-spacing: 0; text-indent: 0; border-collapse: collapse; font-size: 13px; width: 100%; margin-bottom: 15px;" data-mce-style="border: 0; border-spacing: 0; text-indent: 0; border-collapse: collapse; font-size: 13px; width: 100%; margin-bottom: 15px;"
                           class="mce-item-table" data-mce-selected="1">
                        <tbody>

                            <tr>

                                <td colspan="4" style="border: 1px solid #999; padding: 5px;font-weight: bold;text-align: center;">GIẤY ĐỀ NGHỊ THANH TOÁN</td>
                            </tr>
                            <tr>

                                <td colspan="4" style="border: 1px solid #999; padding: 5px;font-weight: bold;text-align: center;"> @ViewBag.ngay</td>

                            </tr>
                            <tr>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;width:25%;">Kính gửi:</td>
                                <td colspan="3" style="border: 1px solid #999; padding: 5px;">Ban Lãnh đạo Công ty</td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;">Người đề nghị: </td>
                                <td colspan="3" style="border: 1px solid #999; padding: 5px;">@(model != null ? model.UserCreateFullName : "")</td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;">Bộ phận:</td>
                                <td style="border: 1px solid #999; padding: 5px;">@(model != null ? model.DepartmentName : "")</td>
                            </tr>

                            <tr>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;">Mã yêu cầu chi:</td>
                                <td colspan="3" style="border: 1px solid #999; padding: 5px;">@(model != null ? model.PaymentCode : "") </td>

                            </tr>


                            <tr>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;">Số tiền thanh toán:</td>
                                <td colspan="3" style="border: 1px solid #999; padding: 5px;">@(model != null ? model.Amount.ToString("N0") : "0") VNĐ</td>

                            </tr>
                            <tr>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;">Bằng chữ:</td>
                                <td colspan="3" style="border: 1px solid #999; padding: 5px;">@(NumberToString.So_chu(model != null ? (double)model.Amount : 0))</td>
                            </tr>

                            <tr>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;">Nội dung thanh toán:</td>
                                <td colspan="3" style="border: 1px solid #999; padding: 5px;">@(model.Note)</td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;">Khách hàng:</td>
                                <td colspan="3" style="border: 1px solid #999; padding: 5px;">@ViewBag.ClientName</td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;">Số tài khoản:</td>
                                <td colspan="3" style="border: 1px solid #999; padding: 5px;"></td>
                            </tr>

                            <tr>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;">Chủ tài khoản:</td>
                                <td colspan="3" style="border: 1px solid #999; padding: 5px;">@(model != null ? model.BankName : "")</td>
                            </tr>

                            <tr>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;">Hạn thanh toán:</td>
                                <td colspan="3" style="border: 1px solid #999; padding: 5px;">@(model != null ? model.PaymentDate.Value.ToString("dd/MM/yyyy HH:mm") : "")</td>
                            </tr>


                        </tbody>
                    </table>


                    <table role="presentation" border="0" cellpadding="0" cellspacing="0" style="border-collapse: separate; width: 100%;" width="100%">
                        <tbody>
                            <tr style="font-weight: 600;" data-mce-style="font-weight: 600;">
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;text-align: center;">Giám đốc</td>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;text-align: center;">Kế toán trưởng</td>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;text-align: center;">Tp. Điều hành</td>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;text-align: center;">Người đề nghị</td>
                            </tr>
                            <tr style="font-weight: 600;" data-mce-style="font-weight: 600;">
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;text-align: center;height: 100px;"> </td>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;text-align: center;height: 100px;"> </td>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;text-align: center;height: 100px;"> </td>
                                <td style="border: 1px solid #999; padding: 5px;font-weight: bold;text-align: center;height: 100px;"> </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="line-bottom" bis_skin_checked="1"></div>
                    @if (ViewBag.type == 0)
                    {
                        <div class="text-right" bis_skin_checked="1">
                            <button type="submit" id="cancel" class="btn btn-default cancel" onclick="$.magnificPopup.close();">Đóng</button>
                            <button type="submit" id="printbtn" class="btn btn-default" onclick="_payment_request_service.ConfirmInYCC(@ViewBag.id)">In</button>
                        </div>
                    }
                </div>
            </td>
        </tr>
    </table>
</body>

</html>